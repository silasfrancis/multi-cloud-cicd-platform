terraform {
  required_providers {
    linode = {
      source = "linode/linode"
      version = "3.8.0"
    }
  }
}

resource "linode_firewall" "cluster_firewall" {
    label = var.firewall_name

    inbound_policy = "DROP"
    outbound_policy = "ACCEPT"

    inbound {
    label    = "allow-http"
    action   = "ACCEPT"
    protocol = "TCP"
    ports    = "80"
    ipv4     = ["0.0.0.0/0"]
    ipv6     = ["::/0"]
    }

    inbound {
        label    = "allow-https"
        action   = "ACCEPT"
        protocol = "TCP"
        ports    = "443"
        ipv4     = ["0.0.0.0/0"]
        ipv6     = ["::/0"]
    }
  
}