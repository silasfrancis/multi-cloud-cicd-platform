terraform {
  required_providers {
    linode = {
      source = "linode/linode"
      version = "3.8.0"
    }
  }
}

resource "linode_lke_cluster" "cluster_dev" {
  label = var.cluster_name
  k8s_version = var.k8_version
  region = var.region
  vpc_id = var.vpc_id
  pool {
    type = var.node_pool_type
    count = var.node_count
  }
}